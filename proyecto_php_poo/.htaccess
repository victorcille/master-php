# Este fichero htaccess lo que me va a permitir es limpiar las url's y hacerlas m√°s amigables
<IfModule mod_rewrite.c>

# Activar rewrite
RewriteEngine on

# Redirigir a esta url cuando se produzca un error 404
ErrorDocument 404 http://localhost/master-php/proyecto_php_poo/error/

# Condiciones para que no podamos cargar un directorio o un fichero por la url
RewriteCond %{SCRIPT_FILENAME} !-d
RewriteCond %{SCRIPT_FILENAME} !-f

RewriteRule ^(.*)/(.*) index.php?controller=$1&action=$2
</IfModule>
